@model IEnumerable<ToDoApp.Models.MyTask>
@{
    ViewBag.Title = "My Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Abandoned Tasks</h2>

@if (!Model.Any())
{
    <p>You don't have any abandoned tasks at this time.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Task</th>
                <th>Created</th>
                <th>Deadline</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                if (task.TaskStatusId == 5)
                {
                    <tr>
                        <td>@task.Name</td>
                        <td>@task.Created</td>
                        <td>@task.Deadline</td>
                        <td>@task.TaskStatus.Name</td>
                    </tr>
                }


            }
        </tbody>
    </table>
}
